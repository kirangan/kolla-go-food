<%= form_with(model: [@reviewable, Review.new], local:true) do |form| %>
<fieldset>
  <legend>Enter Review Details</legend>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, size: 40 %>
  </div>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, cols: 60, id: :review_description %>
  </div>

   <div class="actions">
    <%= form.submit "Insert review" %>
  </div>


</fieldset>
<% end %>