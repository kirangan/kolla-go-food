<%= form_tag(foods_path, method: :get) do %>
  <div>
   <%= label_tag :name_s, 'Name' %> 
   <%= text_field_tag :name_s, params[:name_s] %>
  </div>

  <div>
   <%= label_tag :description_s, 'Description' %> 
   <%= text_field_tag :description_s, params[:description_s] %>
  </div>
  <div>
   <%= label_tag :min_price, 'Minimum Price' %> 
   <%= text_field_tag :min_price, params[:min_price] %>
  </div>
  <div>
   <%= label_tag :max_price, 'Maximum Price' %> 
   <%= text_field_tag :max_price, params[:max_price] %>
  </div>
  
  <div>
    <%= submit_tag 'Search' %>
  </div>
  
<% end %>