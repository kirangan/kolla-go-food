<%= form_tag(restaurants_path, method: :get) do %>
  <div>
   <%= label_tag :name_s, 'Name' %> 
   <%= text_field_tag :name_s, params[:name_s] %>
  </div>

  <div>
   <%= label_tag :address_s, 'Address' %> 
   <%= text_field_tag :address_s, params[:address_s] %>
  </div>
  <div>
   <%= label_tag :min_food, 'Minimum Food Count' %> 
   <%= text_field_tag :min_food, params[:min_food] %>
  </div>
  <div>
   <%= label_tag :max_food, 'Maximum Food Count' %> 
   <%= text_field_tag :max_food, params[:max_food] %>
  </div>
  
  <div>
    <%= submit_tag 'Search' %>
  </div>
  
<% end %>