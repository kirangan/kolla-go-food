<%= form_tag(orders_path, method: :get) do %>
  <div>
   <%= label_tag :name_s, 'Name' %> 
   <%= text_field_tag :name_s, params[:name_s] %>
  </div>

  <div>
   <%= label_tag :address_s, 'Address' %> 
   <%= text_field_tag :address_s, params[:address_s] %>
  </div>

  <div>
   <%= label_tag :email_s, 'Email' %> 
   <%= text_field_tag :email_s, params[:email_s] %>
  </div>


  <div>
   <%= label_tag :min_price, 'Minimum Price' %> 
   <%= text_field_tag :min_price, params[:min_price] %>
  </div>
  <div>
   <%= label_tag :max_price, 'Maximum Price' %> 
   <%= text_field_tag :max_price, params[:max_price] %>
  </div>
  
  <div>
    <%= submit_tag 'Search' %>
  </div>
  
<% end %>