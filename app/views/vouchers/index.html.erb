<p id="notice"><%= notice %></p>

<h1>Vouchers</h1>

<table>
    <% @vouchers.each do |voucher| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="list_description">
          <dl>
            
            <dd><%= voucher.code_name%></dd>
          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', voucher %><br/>
          <%= link_to 'Edit', edit_voucher_path(voucher) %><br/>
          <%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
          </td>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'New Voucher', new_voucher_path %>
